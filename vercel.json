{
    "version": 2,
    "builds": [
        {
            "src": "database/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
        }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "database/wsgi.py" }
    ],
    "functions": {
        "database/wsgi.py": {
            "includeFiles": ["db.sqlite3"]
        }
    }
}
